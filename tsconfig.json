{
    "compilerOptions": {
      "lib": [
        "es2018",
        "dom"
      ],
      "module": "commonjs",
      "target": "es6",
      "esModuleInterop": true,
      "noImplicitAny": true,
      "outDir": "dist",
      "removeComments": true,
      "sourceMap": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "paths": {
        "*": [
          "node_modules/*",
          "typings/*"
        ]
      },
    },
    "include": [
      "server/**/*"
    ]
  } 